<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Wallpaper">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="526dp"
        android:layout_height="737dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.198">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="372dp"
                android:layout_height="679dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#6BFFFFFF"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="372dp"
                    android:layout_height="683dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgWall1"
                        android:layout_width="match_parent"
                        android:layout_height="579dp"
                        android:layout_margin="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wall11"
                        tools:ignore="ContentDescription" />

                    <Button
                        android:id="@+id/btnWall1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/btnWall" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="372dp"
                android:layout_height="679dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#6BFFFFFF"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="372dp"
                    android:layout_height="683dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgWall2"
                        android:layout_width="match_parent"
                        android:layout_height="579dp"
                        android:layout_margin="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wall22"
                        tools:ignore="ContentDescription" />

                    <Button
                        android:id="@+id/btnWall2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/btnWall" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="372dp"
                android:layout_height="679dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#6BFFFFFF"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="372dp"
                    android:layout_height="683dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgWall3"
                        android:layout_width="match_parent"
                        android:layout_height="579dp"
                        android:layout_margin="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wall33"
                        tools:ignore="ContentDescription" />

                    <Button
                        android:id="@+id/btnWall3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/btnWall" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>